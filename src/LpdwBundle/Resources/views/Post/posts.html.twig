{% extends 'LpdwBundle::layout.html.twig' %}

{% block body %}
    {% for post in posts %}
    <ul>
        <li>
            <a href="{{ path('lpdw_post', {'id': post.id, 'ko': 'ok'}) }}">{{ post.content }}</a>
        </li>
        <li>
            {{ post.user.username }}
        </li>
        <li>
            {{ post.visible ? 'oui' : 'non' }}
        </li>
        <li>
            {{ post.date|date('Y-m-d') }}
        </li>
    </ul>
    {% endfor %}
{% endblock %}
